<div>
    <label>Title</label>
    <!--setting the title of the book-->
    <!--after submiting the data and getting an error, return the value of the book-->
    <input type="text" name="title" value="<%= book.title %>">    
</div>
<div>
    <label>Author</label>
    <!--sellecting the Author-->
    <select name="author">
        <!--Generating the options of authors-->
    <% authors.forEach(author => { %>
        <!--In case of error return the value of the selected author-->
        <% if (author.id == book.author) { %> 
            <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } %> 
    <% }) %> 
    </select>     
</div>
<div>
    <label>Publish Date</label>
    <!--setting the publish Date-->
    <!--In case of error return selected date, first toISOString()-->
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Page Count</label>
    <!--setting the page number-->
    <!--In case of error return page number-->
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>
<div>
    <label>Cover</label>
    <!--Importing the cover of the book-->
    <input type="file" name="cover">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= book.description %></textarea>
</div>